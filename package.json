{
  "name": "express--template",
  "version": "1.0.0",
  "type": "module",
  "description": "Skeleton for new typescript services based on express",
  "license": "MIT",
  "keywords": [
    "typescript",
    "express",
    "template"
  ],
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run validate-typescript && npm run build:clean && npm run generate-dist",
    "start": "node dist/main.js",
    "dev": "nodemon",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.mjs,cjs,.ts,.mts",
    "lint:fix": "npm run lint -- --fix",
    "build:clean": "rimraf dist; exit 0",
    "validate-typescript": "tsc -p tsconfig.prod.json --noEmit",
    "generate-dist": "swc ./src -d dist --strip-leading-paths"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/types": "^19.0.3",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.24",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "nock": "^13.5.5",
    "nodemon": "^3.1.4",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.21.2"
  }
}
